<!--components/classic/music/index.wxml-->
<view class="classic-container" hidden="{{hidden}}">
  <image src="{{img}}" class="classic-img  {{playing?'rotation':''}}" />
  <image src="{{playing?pauseSrc:playSrc}}" bind:tap="onPlay" class="player-img" />
  <image src="{{tagSrc}}" class="tag" />
  <text class="content">{{content}}</text>
</view>